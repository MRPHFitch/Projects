generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  badgeID     String   // hashed
  statusCodes var 
  devices     Device[]
  createdAt   DateTime @default(now())
}

model Device {
  id             String   @id @default(uuid())
  userId         String
  deviceId       String   // client-provided device identifier
  name           String?
  createdAt      DateTime @default(now())
  prekeys        PreKey[]
  signedPreKey   PreKey?  @relation("signed_prekey", fields: [signedPreKeyId], references: [id])
  signedPreKeyId String?
  isActive       Boolean  @default(true)

  user User @relation(fields: [userId], references: [id])
}

model PreKey {
  id        String   @id @default(uuid())
  deviceId  String
  keyId     Int
  publicKey String   // store base64/hex of public key material
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  device Device @relation(fields: [deviceId], references: [id])
}

model Message {
  id          String   @id @default(uuid())
  fromUserId  String
  fromDevice  String
  toUserId    String
  toDevice    String
  payload     String   // encrypted blob (base64 or hex)
  timestamp   DateTime @default(now())
  delivered   Boolean  @default(false)
  read        Boolean  @default(false)
}